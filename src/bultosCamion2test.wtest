import camion2.*
import cosas2.*



describe "Camion 2" {
	
	test "Total bultos sumados si *ESTAN CARGADOS*" {
		
		// Se carga a Bumblebee
		bumblebee.seTransforma()
		bumblebee.siEsCargado() 
		camion2.cargar(bumblebee)
		
		// Se carga los 150 kg de arena
		arena.pesoArena(150)
		arena.siEsCargado()
		camion2.cargar(arena)
		
		// Se carga la bateria antiaerea con los misiles
		bateriaAntiaerea.estaConMisiles()
		bateriaAntiaerea.siEsCargado()
		camion2.cargar(bateriaAntiaerea)
		
		// Se cargan los 80 ladrillos embalados
		paqueteLadrillos.cantidadLadrillos(80)
		embalajeSeguridad.embalar(paqueteLadrillos)
		embalajeSeguridad.siEsCargado()
		camion2.cargar(embalajeSeguridad)
		
		assert.equals(true,camion2.todoPesoPar())
		
		assert.equals(false,camion2.hayAlgunoQuePesa(500))
		
		assert.equals("error",camion2.elDeNivel(30))
		
		assert.equals(1430,camion2.pesoTotal())
		
		assert.equals(false,camion2.excedidoDePeso())
		
		assert.equals([bateriaAntiaerea],camion2.objetosQueSuperanPeligrosidad(20))
		
		assert.equals(false,camion2.objetosMasPeligrososQue(embalajeSeguridad))
		
		assert.equals(true,camion2.puedeCircularEnRuta(120))
		
		assert.equals([arena,embalajeSeguridad,bateriaAntiaerea],camion2.tieneAlgoQuePesaEntre(100,300))
		
		assert.equals(bumblebee,camion2.cosaMasPesada())
		
		assert.equals([800,170,300,160],camion2.pesos())
		
		aasert.equals(7,camion2.totalBultos())
		
		
	}
}
